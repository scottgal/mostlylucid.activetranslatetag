{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "LlmTranslate": {
    "Storage": {
      "StorageType": "InMemory",
      "EnableMemoryCache": true,
      "MemoryCacheDurationMinutes": 60
    },
    "Ai": {
      "DefaultProvider": "ollama-local",
      "Chunking": {
        "Enabled": true,
        "ChunkLength": 500,
        "Overlap": 20
      },
      "OllamaProviders": [
        {
          "Name": "ollama-local",
          "BaseUrl": "http://localhost:11434/",
          "Model": "llama3.1"
        }
      ]
    }
  }
}
